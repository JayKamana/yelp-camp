          <section>
            <h1 class="text-center mb-4">Create a new campground</h1>

            <div class="row mb-4">
              <form action="/campgrounds" method="post" class="col-md-6 offset-md-3">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type=" text " class="form-control " id="name" name='name' placeholder="Name ">
                </div>
                <div class="form-group">
                  <label for="desc">Description</label>
                  <input type=" text " class="form-control " id="desc" name='description' placeholder="Description ">
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input type=" number " class="form-control" id="price" name='price' placeholder="Price ">
                </div>
                <div class="form-group ">
                  <label for="image">Image URL</label>
                  <input type="text " class="form-control " id="image" name='image' placeholder="Image URL">
                </div>
                <button type="submit " class="btn btn-primary btn-block">Submit</button>
              </form>
            </div>
          </section>

          <a href="/campgrounds">
            <i class="fas fa-arrow-left"></i> Back
          </a>
