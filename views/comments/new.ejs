<% include ../partials/header %>
  <li class="nav-item">
    <a class="nav-link" href="/">Home
      <span class="sr-only">(current)</span>
    </a>
  </li>
  <li class="nav-item active">
    <a class="nav-link" href="/campgrounds">Campgrounds</a>
  </li>
  </ul>

  <div>
    <%if (!currentUser) {%>
      <a href="/login" class="btn btn-secondary">Login</a>
      <a href="/register" class="btn btn-secondary">Register</a>
      <% } else { %>
        <span>Welcome
          <%= currentUser.username %>
        </span>

        <a href="/logout" class="btn btn-secondary"> Logout</a>
        <% } %>
  </div>

  </div>
  </nav>

  <section>
    <h1 class="text-center mb-4">Add new comment to
      <%= campground.name%>
    </h1>

    <div class="row mb-4">
      <form action="/campgrounds/<%= campground.id %>/comments" method="post" class="col-md-6 offset-md-3">
        <div class="form-group">
          <label for="comment">Comment</label>
          <textarea class="form-control" id="comment" name='comment[text]' placeholder="Comment "></textarea>
        </div>
        <button type="submit " class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </section>

  <a href="/campgrounds">
    <i class="fas fa-arrow-left"></i> Back
  </a>
  <% include ../partials/footer %>